#include <dt-bindings/zmk/matrix_transform.h>
#include "skeletyl_34_wired-layouts.dtsi"

&pio0 {
    status = "okay";

    pio0_uart0: serial {
        status = "okay";
        compatible = "raspberrypi,pico-uart-pio";
        pinctrl-names = "default";
        current-speed = <115200>;
    };
};

/ {
    chosen {
        zmk,physical-layout = &skeletyl_34_wired_layout;
        zmk,split-uart = &pio0_uart0;
    };

    default_transform: keymap_transform_0 {
        compatible = "zmk,matrix-transform";
        columns = <10>;
        rows = <4>;
        map = <
RC(0, 0) RC(0, 1) RC(0, 2) RC(0, 3) RC(0, 4)     RC(0, 9) RC(0, 8) RC(0, 7) RC(0, 6) RC(0, 5)
RC(1, 0) RC(1, 1) RC(1, 2) RC(1, 3) RC(1, 4)     RC(1, 9) RC(1, 8) RC(1, 7) RC(1, 6) RC(1, 5)
RC(2, 0) RC(2, 1) RC(2, 2) RC(2, 3) RC(2, 4)     RC(2, 9) RC(2, 8) RC(2, 7) RC(2, 6) RC(2, 5)
                  RC(3, 2) RC(3, 3)                       RC(3, 8) RC(3, 7)
        >;
    };

    kscan0: kscan {
        compatible = "zmk,kscan-gpio-matrix";
        diode-direction = "row2col";
        wakeup-source;
    };

    bootloader_key_left: bootloader_key_left {
        compatible = "zmk,boot-magic-key";
        key-position = <0>;
        jump-to-bootloader;
        status = "disabled";
    };
    bootloader_key_right: bootloader_key_right {
        compatible = "zmk,boot-magic-key";
        key-position = <9>;
        jump-to-bootloader;
        status = "disabled";
    };
};
